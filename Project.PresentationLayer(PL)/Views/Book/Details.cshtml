
@model BookViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>


<div class="row">
    <div class="col-12">

        <div class="form-group">
            <label asp-for="@Model.Title" class="col-form-label "></label>
            <input asp-for="@Model.Title" class="form-control" readonly />
           
        </div>
        <div class="form-group">
            <label asp-for="@Model.AuthorId" class="col-form-label "></label>
            <input asp-for="@Model.AuthorId" class="form-control" readonly />
            
        </div>
        <br />
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-outline-success">Back To List</a>

    </div>
</div>
