@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(A=>A.Id)</th>
                <th>@Html.DisplayNameFor(A=>A.UserName)</th>
                <th>@Html.DisplayNameFor(A=>A.Email)</th>
                <th>@Html.DisplayNameFor(A=>A.PhoneNumber)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(A=>item.Id)</td>
                    <td>@Html.DisplayFor(A=>item.UserName)</td>
                    <td>@Html.DisplayFor(A=>item.Email)</td>
                    <td>@Html.DisplayFor(A=>item.PhoneNumber)</td>
                    <partial name="_ButtonsViewPartial" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>No Users Found</h3>
    </div>
}
