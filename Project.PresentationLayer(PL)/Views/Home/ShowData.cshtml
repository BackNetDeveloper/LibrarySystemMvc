@model IEnumerable<BookViewModel>
@{
    ViewData["Title"] = "ShowData";
}
<h1>Books Bublished By @ViewBag.AuthorName</h1>
<br />
<a asp-action="Index" class="btn btn-outline-primary">Back To List</a>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover col-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E=>E.Title)</th>
                <th>@Html.DisplayNameFor(E=>E.DateOfBublish)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            
                <tr>
                    <td>@Html.DisplayFor(E=>item.Title)       </td>
                    <td>@Html.DisplayFor(E=>item.DateOfBublish)        </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
         <div class="alert alert-warning mt-5">
        <h3>No Books Found For Bublisher  @ViewBag.AuthorName</h3>
        </div>
}
