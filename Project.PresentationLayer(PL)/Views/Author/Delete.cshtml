@model AuthorViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Author</h1>
<br/>
<h3> are you sure that you want to delete this Author?</h3>
<div class="row">
    <div class="col-6">
        <form asp-action="Delete" asp-controller="Author">
            <input hidden asp-for="Id" />
           
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label "></label>
                <input asp-for="@Model.Name" class="form-control" readonly/>
            </div>
             <div class="form-group">
                <label asp-for="@Model.Address" class="col-form-label "></label>
                <input asp-for="@Model.Address" class="form-control" readonly/>
            </div>
            <br />
            <input type="submit" value ="Delete" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>
